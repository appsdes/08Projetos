<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_detalhes_compra">

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código: "
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textViewValorFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Final: "
        android:layout_below="@id/textViewCodigo"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textViewFuncao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Função: "
        android:layout_below="@id/textViewValorFinal"
        android:layout_margin="16dp"/>

</RelativeLayout>
